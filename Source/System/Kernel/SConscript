Import("Env", "SysEnv")

Src = ["Src/Header.asm"]

# A target for building the KL binary.
Kernelx86 = SysEnv.Program("Kernelx86", [File for File in Src], LINKFLAGS = "-m elf_i386 -TSource/System/Kernel/Src/Arch/x86/Link.ld", CCFLAGS = ["-march=i586", "-m32", "-D _x86"])
KernelAMD64 = SysEnv.Program("KernelAMD64", [File for File in Src], LINKFLAGS = "-m elf_x86_64 -TSource/System/Kernel/Src/Arch/AMD64/Link.ld", CCFLAGS = ["-march=nocona", "-m64", "-D _AMD64", "-mcmodel=large", "-mno-red-zone", "-mno-mmx", "-mno-sse", "-mno-sse2", "-mno-sse3", "-mno-3dnow"])

Depends(Kernelx86, Src)
Depends(KernelAMD64, Src)

Env["Kernelx86"] = Kernelx86
Env["KernelAMD64"] = KernelAMD64

SConscript(dirs=["Modules"], exports=["Env", "SysEnv"])