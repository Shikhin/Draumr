# Import important modules.
import os
import sys

Import("Env")

# Create a basic environment for building the utilities.
SysEnv = Environment()
SysEnv.Append(CCFLAGS = ["-std=c99", "-Wall", "-Wextra", "-pedantic", "-Werror"])

# Hide the ugly compiler command lines and display nice messages.
SysEnv["ASCOMSTR"]      = Env["ASCOMSTR"]
SysEnv["CCCOMSTR"]      = Env["CCCOMSTR"]
SysEnv["ARCOMSTR"]      = Env["ARCOMSTR"]
SysEnv["LINKCOMSTR"]    = Env["LINKCOMSTR"]
SysEnv["RANLIBCOMSTR"]  = Env["RANLIBCOMSTR"]

CRC32 = SysEnv.Program("CRC32.util", "CRC32.c")

# Save the CRC32 target in the Environment as we will need it later.
Env["CRC32"] = CRC32
